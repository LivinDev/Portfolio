---
import { Image } from "astro:assets";
import Logo from "../assets/svg/logo.svg"; // Assume you have a Logo component
---

<footer>
  <div class="footer-content">
    <Image src={Logo} alt="" />
    <nav class="footer-nav">
      <a href="#support">Support</a>
      <a href="#privacy">Privacy Policy</a>
      <a href="#terms">Terms and Conditions</a>
    </nav>
    <p class="copyright">Â© 2024 Enver, All Rights Reserved</p>
  </div>
</footer>

<style>
  footer {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding: 2rem 0;
    background-color: #1a1a2e;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer-nav a {
    color: white;
    text-decoration: none;
    margin-left: 1.5rem;
    opacity: 0.7;
    transition: opacity 0.3s ease;
  }

  .footer-nav a:hover {
    opacity: 1;
  }

  .copyright {
    opacity: 0.7;
    font-size: 0.9rem;
    color: white;
  }
  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      text-align: center;
    }

    .footer-nav {
      margin: 1.5rem 0;
    }

    .footer-nav a {
      display: block;
      margin: 0.5rem 0;
    }

    .copyright {
      margin-top: 1rem;
    }
  }
</style>
